env:
  browser: true
  es6: true

parserOptions:
  ecmaFeatures:
    jsx: true

parser: "babel-eslint"

plugins:
  - react

extends:
  - airbnb

rules:
  react/sort-comp: 0
  no-underscore-dangle: 0
  one-var-declaration-per-line: 0
  no-unused-vars: 0
  comma-dangle: 0
  consistent-return: 0
  arrow-body-style: 0
  no-return-assign: 0
  max-len: 0
  func-names: 0
  one-var: 0
  camelcase: 0
  indent: 0
  no-unused-expressions: [2, { allowTernary: true, allowShortCircuit: true }]
